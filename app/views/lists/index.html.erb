<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.gannett-cdn.com/-mm-/83e081eae80cd2848af52df6da1060d621468f19/c=0-111-2120-1303/local/-/media/2021/02/04/USATODAY/usatsports/red-movie-theater-seats.jpg?width=1600&height=800&fit=crop&format=pjpg&auto=webp);">
  <div class="container text-center d-flex flex-column justify-content-center h-100">
    <h1>Create your own movie playlists</h1>
    <p class= "mt-3 typing" data-controller="typed-js"></p>
  </div>
</div>

<div class="container py-4 home">
  <h2 class="mb-4" data-dark-target="dark">My lists</h2>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <%= link_to list_path(list) do %>
          <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
            <p><%= list.name %></p>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="col-md-4 mb-4">
        <%= link_to new_list_path do %>
          <div class="card-list addlist">
            <i class="fas fa-plus pluslist" data-dark-target="dark"></i>
          </div>
        <% end %>
      </div>
  </div>
</div>
